<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1">
  <title><%= content_for?(:title) ? yield(:title).force_encoding('utf-8') + " :FOFA网站信息库": "我的管理后台 -- FOFA" %></title>
  <%= stylesheet_link_tag "my" %>
  <%= javascript_include_tag "my" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="app">

  <%= render 'layouts/member.header' %>

  <section class="layout">

    <aside class="sidebar collapsible canvas-left">
      <%= render 'layouts/member.sidebar' %>
      <%= render 'layouts/member.footer' %>
    </aside>

    <% if @show_toolbar %>
    <%= render 'layouts/member.toolbar' %>
    <% end %>


    <section class="main-content">

      <div class="content-wrap">
        <% if @notice %>
            <div class="col-xs-6 col-sm-6 alert <%if @error %>alert-warning<%else%>alert-success<%end%> ade in" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">关闭</span></button>
              <strong>提示：</strong> <%=@notice%>
            </div>
        <% end %>
        <% flash.each do |key,value| %>
            <div class="col-xs-6 col-sm-6 alert <%if key.to_s=='alert' %>alert-warning<%else%>alert-success<%end%> ade in" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span>
                <span class="sr-only">关闭</span></button>
              <strong>提示：</strong> <%=value%>
            </div>
        <% end %>
        <%= yield %>
      </div>

    </section>

  </section>
</div>


  <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-45987479-1', 'fofa.so');
      ga('send', 'pageview');

  </script>
</body>
</html>
