
<div class="row">
  <div class="col-xs-6 col-sm-6">
  </div>
    <div class="col-xs-6 col-sm-6">
      <div class="pull-right col-sm-auto" style="margin:10px">
        <%= link_to raw('<li class="fa fa-plus"></li> 新建分组'), new_category_path,
                    :class=>"btn btn-info" %>
      </div>
    </div>
</div>
<!-- Start .bredcrumb -->
<ul id="crumb" class="breadcrumb"><li><i class="im-home"></i><a href="index.html">控制面板</a><i class="en-arrow-right7"></i></li><li><i class="im-screen"></i> 规则分组 </li></ul>
<!-- End .breadcrumb -->
<table class="table table-striped table-hover table-bordered">
  <thead>
  <tr>
    <th width="20%">标题</th>
    <th width="70%">规则集</th>
    <th width="10%">操作</th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>

        <td>
          <%= link_to category.title, category %>
        </td>

        <td>
          <% category.rules.each{|r| %>
              <%= link_to(r.product, r) + raw('， ') %>
          <% } %>
        </td>

        <td>
          <%= link_to '编辑', edit_category_path(category), :class=>"btn btn-success btn-sm " %>
          <%= link_to '删除', category, :class=>"btn btn-success btn-sm ", method: :delete, data: { confirm: '确定要删除吗?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="col-lg-4">
  <div class="pull-right">
    <%= will_paginate @rules,:previous_label=> '上一页',:next_label=> '下一页', :container => false  %>
  </div>
</div>
